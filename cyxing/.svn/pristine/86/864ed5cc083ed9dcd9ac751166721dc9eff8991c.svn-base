.cyfooter{
    border-top:1px solid #666;height: 1.4rem;background: #fff;
    ul{
        height: 100%;display: flex;margin: 0;
        li{
            flex:1;display: flex;flex-direction:column;justify-content:center;text-align: center;
            i{flex:1;font-size:0.52rem;display: flex;justify-content:center;align-items:flex-end;}
            span{flex:1;font-size:0.38rem;display: flex;justify-content:center;align-items:center;}
            &.active a{color:#0cf;}  // 点击高亮样式
        }
    }
}