
#dynamic{
    background-color:#fff;
    flex:1;
    overflow-x:hidden;
    font-size:30px;
    padding:0.4rem;
    .user{
        display:flex;
        align-items:center;
        img{
            width:1.066667rem;
            height:1.066667rem;
            border-radius:40%;
            margin-right:0.4rem;
        }
    }
    .content{
        border-bottom:0.013333rem solid #ccc;
        padding:0.266667rem 0;
        img{
            width:50%;
            margin-top:0.133333rem;
        }
    }
    .comment{
        margin-top:0.133333rem;
        background:#FBFBFB;
        color:#666;
        font-size:25px;
        line-height:0.533333rem;
        padding:0.133333rem 0.266667rem;
        span{
            margin-right:0.266667rem;
        }
        .name{
            color:#1577C7;
        }
    }
    .message{
        line-height:1.066667rem;
        display:flex;
        justify-content:space-between;
        color:#BBBBBB;
        font-size:25px;
        .left{
            display:flex;
            .area{
                margin-left:0.266667rem;
            }
        }
        .right{
            display:flex;
            color:#666;
            .comment1{
                margin-left:0.266667rem;
            }
            i{
                margin-right:0.133333rem;
            }
        }
    }
    .edit{
        justify-content:space-around;
        align-items:center;
        padding:0.266667rem 0;
        display:none;
        input{
            width:6.666667rem;
            height:0.933333rem;
            border:0.026667rem solid #ccc;
            color:#ccc;
            font-size:30px;
            color:#000;
            border-radius:0.133333rem;
            padding-left:0.266667rem;
        }
        button{
            border:0 none;
            background:#00FFFF;
            padding:0.2rem 0.533333rem;
            border-radius:0.2rem;
            font-size:24px;
        }
    }
}
