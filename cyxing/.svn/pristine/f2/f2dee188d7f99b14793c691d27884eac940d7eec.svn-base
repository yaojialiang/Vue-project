#T-mine{
    height:100%;
    display:flex;
    flex-direction:column;
    .T-header{//头部
        height:1.2rem;
        // background:pink;
        padding:0 5%;
        h3{
            font-size:0.4rem;
            text-align: center;
            line-height:1.2rem;
            margin-left:0.766667rem;
            font-weight:normal;
            a{float:right;}
        }
    }
    .T-main{
        flex:1;
        overflow-x:hidden;
        background-color:#F6F6F6;
        .T-headPhoto{
            height:2.8rem;
            width:100%;
            font-size:0.4rem;
            background:#f60;
            line-height:2.0rem;
            padding: 3% 7%;
            a{
                display: block;
                width:100%;
                height:100%;
                padding-top:0.4rem;
            }
            p{
                float:left;
                height:0.8rem;
                line-height:1.4rem;
                color:#fff;
                font-size:0.453333rem;
            }
            img{
                width:1.333333rem;
                height:1.333333rem;
                border:1px solid #000;
                border-radius:50%;
                float:left;
                margin-right:0.4rem;
                margin-top:0.1rem;
            }
            i{//向右箭头
                float:right;
                margin-top:0.4rem;
            }
            
        }//头像下来部分
        .main-class{
            height:2.5rem;
            width:100%;
            margin:0.266667rem 0;
            background:#ccb;
            ul{
                overflow:hidden;
                font-size:0.373333rem;
                height:100%;
                line-height:100%;
                padding:0 3%;
                // display:flex;
                // justify-content:center;
                // align-content:center;
                li{
                    width:25%;
                    float:left;
                    text-align: center;
                    height:100%;
                    line-height:100%;
                    padding-top:0.6rem;
                    i{
                        font-size:0.613333rem;
                        padding-bottom:0.106667rem;
                        &.fa-user-circle,&.fa-star-o{color:#f60;}
                        &.fa-address-book-o,&.fa-folder-o{color:#0cf;}
                    }
                }
            }
        }//列表部分
        ul{
            padding:0 5%;
            background-color:#fff;
            .T-li{
                height:1.333333rem;
                width:100%;
                padding-left:0.2rem;
                font-size:0.4rem;
                line-height:1.333333rem;
                border-bottom:1px solid #ccc;
                a{
                    display: block;
                }
                i{
                    float:right;
                    padding-top:0.4rem;
                    font-size:0.5rem;
                    padding-right:0.133333rem;
                    &.fa-user-circle,&.fa-star-o,&.fa-paper-plane-o{color:#f60;}
                    &.fa-address-book-o,&.fa-folder-o{color:#0cf;}
                }
            }
        }
        
    }
}