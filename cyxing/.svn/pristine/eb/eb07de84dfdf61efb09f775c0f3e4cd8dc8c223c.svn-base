#newsapp{
  	display:flex;flex-direction: column;height:100%;
	.search_news{
		height: 10%;
		text-align: center;
		background: skyblue;
		input{
			width: 70%;
			height: 0.8rem;
			padding: 0.1rem 0 0 1rem;
			border:0px solid black;
			font-size: 0.4rem;
			border-radius:0.2rem;
			position: relative;
		}
		i{
			font-size: 0.4rem;
			position: absolute;
			left:1.8rem;
			top:0.6rem;
			color:#ccc;
			font-weight: normal;
		}
	}
	.tab_ul{
		height: 1.1rem;background: white;overflow-x: scroll;border-bottom: 0.02rem solid black;
		-webkit-overflow-scrolling:touch;float: left;display: -webkit-box;text-align: center;
		li.active{
			border-bottom: 2px solid #0cf;padding:0 0.1rem;
			a{color:#0cf;}
		}
		li{
			width: 3.4rem;font-size: 0.363576rem;line-height: 1rem;
		}	
	}
	.news_area{
		font-size: 0.35rem;flex: 1;overflow: auto;
	}
}